<!DOCTYPE html>
<html>
    <head>
        <title>Gmart</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <meta name="viewport" content="width=device-width">
        <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
        <link rel="stylesheet" href="dist/css/adminlte.min.css">
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
        <link rel="stylesheet" href="styles.css">
    </head>

    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                                               <i class="fas fa-bars"></i></a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link">Home</a>
                    </li>
                </ul>
            </nav>
            <!-- /.navbar -->
            
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo 
                <a href="#" class="brand-link">-->
                  <!--<img src="FFlogo.jpg"
                       alt="Fashion Feet Logo"
                       class="brand-image img-circle elevation-3">-->
                  <span class="brand-text font-weight-light c2 s"><h3>footwear  Shopping</h3></span>
                </a>
                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/create" class="nav-link">
                            <i class="nav-icon far fa-circle text-info"></i>
                            <p class="text"><i><b>ADD Product</b></i> </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/update" class="nav-link">
                            <i class="nav-icon far fa-circle text-info"></i>
                            <p class="text"><i ><b>Update Stock</b></i></p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/delete" class="nav-link">
                            <i class="nav-icon far fa-circle text-info"></i>
                            <p class="text"><i><b>Delete Product</b></i></p>
                            </a>
                        </li>
                        
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>
            
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                
                <section class="content-header">
                    <h1>footwear management inventory</h1>
                </section>
                
                <section class="content">
                    <!--title of the table-->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Stock Details</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i></button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fas fa-times"></i></button>
                            </div>
                        </div>
        
                        <div class="card-body table-responsive p-0" style="height: 400px;">
                            <table class="table table-striped table-head-fixed text-nowrap">
                                <thead>
                                    <tr>
                                        <th style="width: 10%" >Product ID</th>
                                        <th style="width: 10%" >Category</th>
                                        <th style="width: 15%" >Type</th>
                                        <th style="width: 10%" >stock</th>
                                        <th style="width: 10%" >Selling Price</th>
                                        <th style="width: 10%" >Size</th>
                                    </tr>
                                </thead>
                        
                                <tbody>
                                    <tr>
                                        <% for(var i=0;i<data.length;i++){ %>
                                            <tr>
                                                <td><%= data[i].pid %></td>
                                                <td><%= data[i].category %></td>
                                                <td><%= data[i].type %></td>
                                                <td><%= data[i].stock%></td>
                                                <td><%= data[i].price %></td>
                                                <td><%= data[i].size %></td>
                                                
                                            </tr>
                                        <% } %>
                                        
                                    </tr>
                                </tbody>
                            </table>
                        </div>
        
                    </div>    
                </section>
            </div>
        </div>
    </body>

</html>













